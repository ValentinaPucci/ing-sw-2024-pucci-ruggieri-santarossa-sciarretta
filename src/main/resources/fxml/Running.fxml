<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.effect.ColorAdjust?>
<AnchorPane fx:id= "mainAnchor" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="850.0" prefWidth="1500.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" styleClass="anchor-pane" fx:controller="it.polimi.demo.view.gui.controllers.RunningController">
    <children>

        <Pane fx:id="gameBoardPane" layoutX="5.0" layoutY="5.0" prefHeight="800.0" prefWidth="600.0" />

        <VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="TOP_CENTER">
            <!-- Common Cards Section -->
            <Label text="Common Cards:" style="-fx-font-family: 'Luminari'; -fx-font-size: 20; -fx-text-fill: #4d0202;" />
            <GridPane fx:id="CommonGridPane" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
            </GridPane>

            <!-- Your Objective Section -->
            <Label text="Your objective:" style="-fx-font-family: 'Luminari'; -fx-font-size: 20; -fx-text-fill: #4d0202;" />
            <GridPane fx:id="PersonalObjectiveGridPane" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
            </GridPane>

            <!-- Your Points Section -->
            <Label layoutX="370.0" layoutY="338.0" prefHeight="38.0" prefWidth="179.0" text="Your Points:" style="-fx-font-family: 'Luminari'; -fx-font-size: 20; "/>
            <!-- Etichetta dinamica per il mio punteggio -->
            <Label fx:id="youPoints" layoutX="545.0" layoutY="338.0" prefHeight="38.0" prefWidth="58.0" text="0" style="-fx-font-family: 'Luminari'; -fx-font-size: 20;" />
        </VBox>
        <VBox layoutX="330.0" layoutY="420.0" spacing="10" alignment="TOP_CENTER">
            <Label text="Your card hand:" style="-fx-font-family: 'Luminari'; -fx-font-size: 20; -fx-text-fill: #4d0202;" />
            <HBox spacing="10">
                <GridPane fx:id="CardHandPane" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
                </GridPane>
                <Button text="FLIP" style="-fx-font-family: 'Luminari'; -fx-font-size: 20;" onAction="#flipCardHand" />
                <effect>
                    <ColorAdjust hue="0.17" saturation="0.3" />
                </effect>
            </HBox>
        </VBox>

        <VBox layoutX="14.0" layoutY="620.0" spacing="10" alignment="TOP_CENTER">
            <Label text="Latest events:" style="-fx-font-family: 'Luminari'; -fx-font-size: 20; -fx-text-fill: #4d0202;" />
            <ListView fx:id="eventsListView" prefWidth="300" prefHeight="100" style="-fx-border-color: black;" styleClass="backgroundTransparent" />
        </VBox>
    </children>
</AnchorPane>

